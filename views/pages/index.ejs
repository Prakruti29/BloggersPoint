    <section class="box">
      <section class="slider" id="slide">
        
      </section>
      <button id="prew" onclick="prew()"> < </button>
      <button id="nxt" onclick="nxt()"> > </button>
  
    </section>
    <section class="information">
      <% var i=0; %>
      <% posts.forEach(post => { %>
        <% if(i < 4) { %>
        <div> 
          <img height="150px" width="250px" src="/static/images/<%= post.image %>" alt="" />
          <h1><%= post.title %></h1>
          <h2>Author : <%= post.user.name %></h2>
          
          <i class="fa fa-thumbs-o-up"> <%= post.likes %></i>
          <center><a class="button" href="/posts/blog/single/<%= post.id %>">Readmore</a></center> 
        </div>
        <% i++ %>
          
      <% } %>

      <% }); %>

      <a href="/auth/All_Blogs" > Load more ..</a>

    </section> 

    <%- include('../components/footer') %>

    <!-- CUSTOM JS -->
    <script src="/static/js/main.js"></script>
    <script src="/static/js/slide.js"></script>
  </body>
